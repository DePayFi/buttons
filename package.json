{
  "name": "depay-buttons",
  "moduleName": "DePayButtons",
  "version": "0.9.0",
  "description": "Accept and perform crypto payments with DePay. Decentralized payment buttons that simplify crypto payments.",
  "main": "./dist/cjs/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && rollup -c",
    "lint": "eslint \"src/**/*.{js,ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{js,ts,tsx}\" --fix",
    "format": "prettier src --write",
    "prepublishOnly": "yarn build",
    "start": "rollup -c rollup.serve.config.js -w",
    "test:units": "jest --no-cache",
    "test:integration": "yarn cypress run",
    "test:cov": "jest --coverage",
    "test:watch": "jest --watch --no-cache",
    "test": "yarn test:units && yarn test:integration"
  },
  "repository": "git@github.com:DePayFi/depay-buttons.git",
  "keywords": [
    "payments",
    "crypto",
    "react",
    "buttons",
    "widget"
  ],
  "author": "depay.fi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DePayFi/depay-buttons/issues"
  },
  "homepage": "https://github.com/DePayFi/depay-buttons#readme",
  "private": false,
  "dependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@rollup/plugin-replace": "^2.4.1",
    "depay-react-shadow-dom": "^1.0.3",
    "depay-widgets": "^1.4.2"
  },
  "peerDependencies": {
    "react": "^17",
    "react-dom": "^17"
  },
  "engines": {
    "node": ">=10"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-react": "^7.12.7",
    "@types/node": "^14.14.12",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "cypress": "^6.2.1",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^26.6.3",
    "jest-dom": "^4.0.0",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-test-renderer": "^17.0.1",
    "react-testing-library": "^8.0.1",
    "rollup": "^2.34.2",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-typescript2": "^0.29.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2"
  }
}
